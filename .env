# .env

# --- Auto Status View Configuration ---
# Options for AUTO_STATUS_VIEW_MODE:
#   - VAD: View And Download media, No SMS notification to sender.
#   - VND: View Not Download media, No SMS notification to sender.
#   - VNS: View status and Send an SMS (WhatsApp message) notification to sender, do NOT download media.
# If left empty or unrecognized, only 'sendSeen()' will occur.
AUTO_STATUS_VIEW_MODE=VND 

# Set to 'true' to send a message when in VNS mode. Only effective if AUTO_STATUS_VIEW_MODE is VNS.
SEND_STATUS_VIEW_MESSAGE=false 

# The message to send back to the status author when in VNS mode and SEND_STATUS_VIEW_MESSAGE is true.
STATUS_VIEW_MESSAGE_TEXT="Hey, I just saw your status! Nice one. ðŸ˜Š"

# --- Other existing env variables (keep them as they are or adjust) ---
PHONE_NUMBER= # Your bot's phone number for pairing, e.g., 254712345678 (no + or spaces)
REACT_ON_SUCCESS=true
PROCESS_BOT_STATE=typing
ENABLE_AUTO_HISTORY_SYNC=true

# --- Channel Update (for !sendtochannel command) ---
# Replace with your actual WhatsApp Channel ID (e.g., 1234567890@newsletter)
CHANNEL_UPDATE_ID=120363386433865812@newsletter
# Comma-separated list of authorized phone numbers (without @c.us or @s.whatsapp.net)
ALLOWED_CHANNEL_UPDATE_USERS=254793859108,254103106336,2348026130017,25441804004

# --- Auto Read (set to 'false' to prevent the bot from automatically marking incoming messages as seen) ---
AUTO_READ=true